<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PrayerTimeFragment"
        android:background="@drawable/backgroundimg">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/fajarTimeCartView"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:neumorph_shadowColorDark="#000000"
            app:neumorph_shadowColorLight="#6782E1"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat"
            android:layout_marginTop="40dp">

            <soup.neumorphism.NeumorphImageView
                style="@style/Widget.Neumorph.ImageView"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/fajartime"
                app:neumorph_shapeType="basin" />

            <TextView
                android:id="@+id/tv_fajarTimeStart"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="4:25"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_fajarTimeEnd"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="4:25"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/zuhrTimeCartView"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="140dp"
            app:neumorph_shadowColorDark="#000000"
            app:neumorph_shadowColorLight="#6782E1"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

            <soup.neumorphism.NeumorphImageView
                style="@style/Widget.Neumorph.ImageView"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/zuhr"
                app:neumorph_shapeType="basin" />

            <TextView
                android:id="@+id/tv_zuhrTimeStart"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="1:25"
                android:textSize="20sp"
               android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_zuhrTimeEnd"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="1:25"
                android:textSize="20sp"
               android:textStyle="bold" />
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/asrTimeCartView"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="240dp"
            app:neumorph_shadowColorDark="#000000"
            app:neumorph_shadowColorLight="#6782E1"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

            <soup.neumorphism.NeumorphImageView
                style="@style/Widget.Neumorph.ImageView"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/asr"
                app:neumorph_shapeType="basin" />

            <TextView
                android:id="@+id/tv_asrTimeStart"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="5:55"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_asrTimeEnd"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="5:55"
                android:textSize="20sp"
                android:textStyle="bold" />
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/maghribTimeCartView"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="340dp"
            app:neumorph_shadowColorDark="#000000"
            app:neumorph_shadowColorLight="#6782E1"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

            <soup.neumorphism.NeumorphImageView
                style="@style/Widget.Neumorph.ImageView"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/maghribtime"
                app:neumorph_shapeType="basin" />

            <TextView
                android:id="@+id/tv_maghribTimeStart"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="7:25"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_maghribTimeEnd"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="7:25"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/ishaTimeCartView"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="440dp"
            app:neumorph_shadowColorDark="#000000"
            app:neumorph_shadowColorLight="#6782E1"
            app:neumorph_shadowElevation="3dp"
            app:neumorph_shapeType="flat">

            <soup.neumorphism.NeumorphImageView
                style="@style/Widget.Neumorph.ImageView"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_moon"
                app:neumorph_shapeType="basin" />

            <TextView
                android:id="@+id/tv_ishaTimeStart"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="9:10"
                android:textSize="20sp"
               android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_ishaTimeEnd"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="9:10"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </soup.neumorphism.NeumorphCardView>

    </FrameLayout>

</layout>