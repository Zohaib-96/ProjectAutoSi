<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".`Splash Screen`"
    android:background="@drawable/splash_screen_background">
    <TextView
        android:id="@+id/txt_ats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AutoSilentApp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#2c9ec2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_ats"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        >
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableRight="@drawable/baseline_volume_off_24"
            android:layout_centerHorizontal="true"
            android:paddingRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/baseline_music_note_24"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableRight="@drawable/baseline_volume_up_24"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="5dp"
            />

    </LinearLayout>


    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="AutoSilentApp"
        android:textSize="27dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/layout"
        />

</RelativeLayout>